@page "/fetchdata"
@using BV.PACS.Shared
@using BV.PACS.Shared.Models
@using Microsoft.AspNetCore.Components
@inject HttpClient Http

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (sources == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Barcode</th>
                <th>Template</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in sources)
            {
                <tr>
                    <td>@s.SourceRegistrationDate.ToShortDateString()</td>
                    <td>@s.SourceBarcode</td>
                    <td>@s.SourceTemplateName</td>
                </tr>
            }
        </tbody>
    </table>
}

@functions {
    SourceListItem[] sources;

    protected override async Task OnInitAsync()
    {
        sources = await Http.GetJsonAsync<SourceListItem[]>("api/SampleData/GetSources");
    }

}
