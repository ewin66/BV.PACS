@layout MainLayout

@page "/SourceCatalog"
@using BV.PACS.Client
@using BV.PACS.Client.Shared
@using BV.PACS.Shared.Models

@{
    if (TrackingFormId > 0)
    {
        <SourceTracking
                        Id=@TrackingFormId>

        </SourceTracking>
    }
    else
    {
        <SourceCatalogPanel
            OnOpenTrackingForm=@OnOpenTrackingForm>


        </SourceCatalogPanel>
    }
}

@functions
{
    int TrackingFormId { get; set; }
    protected void OnOpenTrackingForm(int id)
    {
        TrackingFormId = id;
        StateHasChanged();
    }


}
