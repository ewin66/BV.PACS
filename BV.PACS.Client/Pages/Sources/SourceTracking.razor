@inject HttpClient _http
@inherits BaseTrackingForm

<h1>Source Tracking</h1>

<div class="row">

    <div class="card demo-card border-0 ">
        <div class="card-body  border-top-0">
            <DxTabs bind-ActiveTabIndex="@ActiveTabIndex">

                <DxTab Text="General info"></DxTab>
                <DxTab Text="Materials"></DxTab>
                <DxTab Text="Diagnostics"></DxTab>
                <DxTab Text="Tests"></DxTab>
                <DxTab Text="Audit log"></DxTab>

            </DxTabs>
            <div class="card demo-card dxbs-border-top-0 dxbs-border-radius-top-0">
                <div class="card-body">
                    @switch (ActiveTabIndex)
                    {
                        case 0:
                            <i>"General info" tab is active.</i>
                            <SourceTrackingPanel Id=@Id>

                            </SourceTrackingPanel>
                            break;
                        case 1:
                            <SourceMaterialsPanel Id=@Id>

                            </SourceMaterialsPanel>
                            break;
                        case 2:
                            <i>"Diagnostics" tab is active.</i>
                            break;
                        case 3:
                            <i>"Tests" tab is active.</i>
                            break;
                        case 4:
                            <i>"Audit log" tab is active.</i>
                            break;
                    }
                </div>
            </div>
            <div class="card-body">
                <ul class="nav flex-column float-right">
                    <li class="nav-item px-3">
                        <button onclick="@DoCancel" class="btn btn-secondary">Cancel</button>
                    </li>
                </ul>
                <ul class="nav flex-column float-right">
                    <li class="nav-item px-3">
                        <button onclick="@DoOk" class="btn btn-primary">Ok</button>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>


@functions {
}