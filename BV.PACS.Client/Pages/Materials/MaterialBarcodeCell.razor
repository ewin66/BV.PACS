@using BV.PACS.Shared.Models
@using Microsoft.AspNetCore.Components

<button type="button" class="btn btn-link" onclick="@OnClick">@Barcode</button>

@functions {

    [Parameter]
    object Context { get; set; }

    int Id => Context is MaterialCatalogDto material ? material.MaterialId : 0;
    string Barcode => Context is MaterialCatalogDto material ? material.MaterialBarcode : string.Empty;

    [Parameter]
    public Action<string, int> OnCellClick { get; set; }

    private void OnClick()
    {
        if (Id > 0)
        {
            OnCellClick?.Invoke(nameof(MaterialTracking), Id);
        }
    }

}