@page "/TestCatalog"
@using BV.PACS.Client.Shared.Catalog
@using BV.PACS.Shared.Models
@using Microsoft.AspNetCore.Components
@inherits BV.PACS.Client.Shared.Catalog.CatalogComponent
@inject HttpClient _http

<h1>Test Catalog</h1>

@if (_Tests == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    <div class="row">
        <div class="@CatalogState.SearchPanelCssClass">
            <TestSearchPanel OnSearch=@OnSearchPanelSearch>

            </TestSearchPanel>
        </div>

        <div class="@CatalogState.GridPanelCssClass">
            <div class="row">

                <div class="col-sm-12">
                    <button onclick="@OnSearchPanelToggle" class="btn btn-info float-right">@CatalogState.ShowHideSearchPanelCaption</button>
                </div>
                <div class="col-sm-12">
                    <DxFormLayout CaptionPosition=@CaptionPosition.Vertical>
                        <DxFormLayoutItem ColSpanLg="12" ColSpanMd="12">
                            <Template>
                                <DxDataGrid Data=@_Tests
                                            ShowFilterRow=@false
                                            ShowPager=@false
                                            AllowRowSelection=@false
                                            PageSize=@CatalogState.Condition.PageSize>
                                    <DxDataGridCommandColumn Width="150px"></DxDataGridCommandColumn>
                                    <DxDataGridColumn Field=@nameof(TestListItem.TestBarcode)></DxDataGridColumn>
                                    <DxDataGridColumn Field=@nameof(TestListItem.TestTemplateName) Caption="Template Name"></DxDataGridColumn>
                                    <DxDataGridDateEditColumn Field=@nameof(TestListItem.TestRegistrationDate)></DxDataGridDateEditColumn>
                                    <DxDataGridColumn Field=@nameof(TestListItem.TestType)></DxDataGridColumn>
                                </DxDataGrid>
                                @if (_pageCount > 1)
                                {
                                    <DxPager PageCount=@_pageCount
                                             bind-ActivePageIndex=@ActivePageNumber
                                             CollapseButtonCount=@CatalogState.CollapseButtonCount>
                                    </DxPager>
                                }
                            </Template>
                        </DxFormLayoutItem>
                    </DxFormLayout>
                </div>
            </div>
        </div>
    </div>
}

@functions {

    private int _pageCount;
    private TestListItem[] _Tests;

    protected override async Task BeginGetPageCountAsync(AggregatedConditionDto cond)
    {
        _pageCount = await _http.PostJsonAsync<int>("api/Catalog/GetTestsRecordCount", cond) / cond.PageSize;
    }

    protected override async Task BeginGetDataAsync(AggregatedConditionDto cond)
    {
        _Tests = await _http.PostJsonAsync<TestListItem[]>("api/Catalog/GetTests", cond);
    }

}