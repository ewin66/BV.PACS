@using BV.PACS.Client.Pages
@using BV.PACS.Shared.Models
@using Microsoft.AspNetCore.Components

@{
    if (Context is SourceCatalogDto source)
    {
        <BarcodeInnerCell Id=@source.SourceId
                          Route=@nameof(SourceTracking)
                          Barcode=@source.SourceBarcode>
        </BarcodeInnerCell>
    }
    else if (Context is MaterialCatalogDto material)
    {
        <BarcodeInnerCell Id=@material.MaterialId
                          Route=@nameof(MaterialTracking)
                          Barcode=@material.MaterialBarcode>
        </BarcodeInnerCell>
    }
    else if (Context is AliquotCatalogDto aliquot)
    {
        <BarcodeInnerCell Id=@aliquot.AliquotId
                          Route=@nameof(AliquotTracking)
                          Barcode=@aliquot.AliquotBarcode>
        </BarcodeInnerCell>
    }
    else if (Context is TestCatalogDto test)
    {
<BarcodeInnerCell Id=@test.TestId
                  Route=@nameof(TestTracking)
                  Barcode=@test.TestBarcode>
</BarcodeInnerCell>
    }

}

@functions {

    [Parameter] object Context { get; set; }
}
